<mvc:View controllerName="cac.employeesfinal.controller.Menu" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <Page id="page" title="{i18n>menuPrincipal}" titleAlignment="Center" >
        <content>
            <Panel headerText="{i18n>empleados}" expandable="true" expanded="true">
                <GenericTile headerImage="sap-icon://add-employee" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToCreateEmployee">
                    <TileContent footer="{i18n>crearEmpleado}"/>
                </GenericTile>
                <GenericTile headerImage="sap-icon://employee-lookup" class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="navToShowEmployee">
                    <TileContent footer="{i18n>verEmpleados}"/>
                </GenericTile>
            </Panel>
            <Panel headerText="{i18n>pedidos}"  expandable="true" expanded="true">
                <GenericTile id="linkFirmarPedido"  headerImage="sap-icon://signature" class="sapUiTinyMarginBegin sapUiTinyMarginTop" url="https://c7b25ecdtrial-dev-employees2-approuter.cfapps.us10-001.hana.ondemand.com/cacemployees/index.html" >
                    <TileContent footer="{i18n>firmarPedido}"/>
                </GenericTile>
            </Panel>
        </content>
    </Page>
</mvc:View>